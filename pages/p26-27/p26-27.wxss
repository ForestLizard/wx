/* pages/p26-27/p26-27.wxss */

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
  background-color: #56c0b0;
}

#avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 40rpx;
  margin: 30rpx 0 20rpx 0;
}

#company-name {
  font-size: 15px;
  margin-bottom: 20rpx;
}

#company-info {
  color: #eee;
  font-size: 12px;
  padding-bottom: 30rpx;
}

.intv {
  margin-bottom: 15rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
}

.left {
  color: #333;
  font-size: 15px;
}

.num {
  color: #56c0b0;
}

.right {
  color: #ddd;
  font-size: 15px;
  display: flex;
  align-items: center;
}

.right image {
  width: 30rpx;
  height: 30rpx;
}
.nav {
  display: flex;
  background-color: #fff;
}

.nav-item {
  width: 375rpx;
  padding: 30rpx 0 20rpx 0;
  color: #999;
  font-size: 14px;
  text-align: center;
  border-bottom: 1rpx solid #eee;
  transition: 0.6s 0s;
}

.nav-item-now {
  position: relative;
  color: #56c0b0;
}

.nav-item-now::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 2rpx;
  left: 0;
  bottom: -1rpx;
  background-color: #56c0b0;

}

.index-box {
  background-color: #fff;
}

.group {
  display: flex;
  flex-direction: column;
}

.group-title {
  color: #333;
  font-size: 15px;
  padding-bottom: 30rpx;
}

.group-content {
  display: flex;
}

.group-content image {
  width: 116rpx;
  height: 116rpx;
  border-radius: 6rpx;
  margin-right: 20rpx;
}

.product {
  width: 554rpx;
  display: flex;
  flex-direction: column;
}

.product-name {
  color: #333;
  font-size: 14px;
  padding-bottom: 20rpx;
}

.product-cls{
  padding-bottom: 20rpx;
  color: #666;
  font-size: 14px;
}
.product-cls text{
  padding-right: 20rpx;
}

.product-info {
  line-height: 30rpx;
  padding-bottom: 20rpx;
  color: #999;
  font-size: 12px;
}

navigator{
  color: #56c0b0;
  font-size: 12px;
  
}


.company-info{
  font-size: 14px;
  color: #666;
  line-height: 48rpx;
}
.img-box {
  position: relative;
  width: 690rpx;
  height: 280rpx;
  display: flex;
  justify-content: center;
}

.img-box image{
  position: absolute;
  width: 690rpx;
  height: 280rpx;
  top:0;
  left: 0;
}
.icon-box{
  height: 10rpx;
  margin-top:242rpx;
  display: flex;
}

.icon{
  width: 10rpx;
  height: 10rpx;
  margin: 0 7.5rpx;
  border-radius: 5rpx;
  background-color: #fff;
  opacity: 0.4;
}
.icon-now{
  opacity: 0.9;
}

.job-box{
  background-color: #fff;
}
.media{
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}
.media-header, .media-footer{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.job-name{
  color:#333;
  font-size: 15px;
}
.job-time{
  color: #999;
  font-size: 12px;
}
.media-footer{
  padding-top: 20rpx;
}
.job-info{
  display: flex;
  align-items: center;
}
.job-info text{
  color: #999;
  font-size: 12px;
  padding-right: 30rpx;
}
.job-info image{
  width: 30rpx;
  height: 30rpx;
  padding-right: 10rpx;
}
.job-salary{
  color: #56c0b0;
  font-size: 12px;
}