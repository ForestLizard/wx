}
.nav-item-now{
  position: relative;
  color: #56c0b0;
}
.nav-item-now::after{
  content: '';
  position: absolute;
  width: 100%;
  height: 2rpx;
  left: 0;
  bottom:  -1rpx;
  background-color: #56c0b0;
}

