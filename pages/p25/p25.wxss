/* pages/p25/p25.wxss */

.sec {
  margin-top: 15rpx;
}

.media4 {
  padding: 30rpx 30rpx 20rpx 30rpx;
  border-bottom: 0;
  display: flex;
  align-items: flex-start;
}

.media4-icon {
  width: 90rpx;
  height: 90rpx;
  margin-right: 10rpx;
  border-radius: 0;
}

.media4-body {
  flex-direction: column;
  align-items: flex-start;
  width: 590rpx;
}

.media4-title {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  width: 590rpx;
}

.intv-state {
  color: #999;
  font-size: 12px;
  padding-left: 20rpx;
}

.intv-eval-simple {
  margin-right: 20rpx;
  height: 37rpx;
  line-height: 37rpx;
  color: #fff;
  background-color: #56c0b0;
  font-size: 12px;
  border-radius: 19rpx;
  text-align: center;
  padding: 0 10rpx;
}

.media4-time {
  padding-bottom: 0;
  font-size: 12px;
  text-align: right;
}

.star {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx 30rpx 30rpx;
  background-color: #fff;
}

.star-item {
  display: flex;
  align-items: center;
}

.star text {
  color: #999;
  font-size: 10px;
}

.star image {
  width: 20rpx;
  height: 20rpx;
  padding-left: 6rpx;
}

.intv-eval-detail {
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
  background-color: #fff;
}

.intv-eval {
  padding-bottom: 30rpx;
  color: #666;
  font-size: 14px;
}

.reply {
  position: relative;
  margin-bottom: 30rpx;
  padding: 20rpx;
  color: #56c0b0;
  background-color: #f5f5f5;
  font-size: 12px;
}
.hr-reply{
  position: absolute;
  left: 35rpx;
  top: -20rpx;
  width: 20rpx;
  height: 20rpx;

}

.reply-content {
  color: #666;
  line-height: 32rpx;
}
