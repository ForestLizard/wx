/* pages/p50-51/p50-51.wxss */

.nav-bar-black {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.nav-bar-black image {
  width: 40rpx;
  height: 40rpx;
  padding-right: 30rpx;
}

.cont {
  padding: 86rpx 0 998rpx 0;
}

.time {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 30rpx;
}

.session-oppo {
  display: flex;
  padding-left: 20rpx;
  padding-bottom: 36rpx;
}

.arrow-left {
  width: 10rpx;
  height: 20rpx;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
}

.session-oppo text {
  display: inline-block;
  background-color: #fff;
  padding: 15rpx;
  border: 1rpx solid #ccc;
  border-radius: 6rpx;
  max-width: 522rpx;
  color: #999;
  font-size: 14px;
}

.session-me {
  display: flex;
  justify-content: flex-end;
  padding-right: 20rpx;
  padding-bottom: 36rpx;
}

.arrow-right {
  width: 10rpx;
  height: 10rpx;
}

.session-me text {
  display: inline-block;
  background-color: #56c0b0;
  padding: 15rpx;
  border: 1rpx solid #22ad98;
  border-radius: 6rpx;
  max-width: 522rpx;
  color: #fff;
  font-size: 14px;
}
.single-line{
  align-items: center;
}
.single-line text{
  height: 28rpx;
  line-height: 28rpx;
}
.multi-line{
  align-items: flex-start;
}
.multi-line .arrow-left, .multi-line .arrow-right{
  padding-top: 21rpx;
}
.multi-line text{
  line-height: 45rpx;
  height: auto;
}

.footer{
  position: fixed;
  left: 0;
  bottom: 0;
  height: 97rpx;
  width: 750rpx;
  background-color: #f5f5f5;
  border-top: 1rpx solid #eee;
  display: flex;
  align-items: center;
}
.footer image{
  width: 60rpx;
  height: 60rpx;
  padding: 0 15rpx 0 10rpx;
}
#send{
  width: 543rpx;
  height: 74rpx;
  border: 1rpx solid #eee;
  border-radius: 6rpx;
}
.bt-primary{
  width: 98rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 10rpx 0 15rpx;
  font-size: 13px;
  padding: 0 20rpx;
}





.circle{
  position: fixed;
  top:0;
  width: 615rpx;
  height: 100vh;
  background-color: #f0f0f0;
  z-index:12;
  transition: 0.3s 0s;
}

.sec{
  display: flex;
  align-items: center;
  background-color: #fff;
}
.sec-left{
  width: 68rpx;
  height: 68rpx;
  padding:  20rpx 30rpx;
}
.sec-content{
  width: 457rpx;
  padding: 40rpx 30rpx 40rpx 0;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 14px;
  color: #333;
}
.sec-content-last{
  border: 0;
}
.sec-content image{
  width: 30rpx;
  height: 30rpx;
}