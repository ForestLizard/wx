/* pages/my_editcvs/my_editcvs.wxss */

.header{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 15rpx;
  padding: 30rpx;
  color: #fff;
  background-color: #56c0b0;
}

#avatar{
  width: 88rpx;
  height: 88rpx;
  border-radius: 44rpx;
  margin-bottom: 30rpx;
}
#primary-info{
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
}
#name{
  font-size: 14px;
  padding-right: 10rpx;
}
#sex{
  font-size: 12px;
  padding-right: 10rpx;
}
#age{
  font-size: 12px;
  padding-left: 10rpx
}
#character{
  font-size: 12px;
}

.sec{
  background-color: #fff;
  margin-bottom: 15rpx;
}
.group text{
  color: #56c0b0;
  font-size: 14px;
}
.sec-content{
  display: flex;
  flex-direction: column;
  padding: 24rpx 30rpx 30rpx 30rpx;
}
.sec-contentborder{
  padding: 30rpx 30rpx 30rpx 0;
  border-bottom: 1rpx solid #eeeeee;
  margin-left: 30rpx;
}
.sec-content-item{
  display: flex;
  color: #666;
  font-size: 12px;
  padding-bottom: 24rpx;
}
.sec-content-item text{
  display: inline-block
}
.keyword{
  width: 103rpx;
}

.keyword-value{
  padding-left: 30rpx;
  width: 563rpx;
}