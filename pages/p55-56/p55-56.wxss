/* pages/p55-56/p55-56.wxss */
.nav-bar{
  background-color: #56c0b0;
  justify-content: flex-end;
}
.cont{
  padding-top: 86rpx;
}
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
  background-color: #56c0b0;
}

#avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 40rpx;
  margin: 30rpx 0 20rpx 0;
}

#name {
  font-size: 15px;
  margin-bottom: 20rpx;
}

#info {
  color: #eee;
  font-size: 12px;
  padding-bottom: 30rpx;
}

.nav{
  margin-bottom: 20rpx;
  background-color: #fff;
  display: flex;
}
.nav-item{
  width: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
}
.nav-item-top{
  padding-bottom: 20rpx;
  font-size: 15px;
  color: #333;
}
.nav-item-bottom{
  font-size: 12px;
  color: #999;
}
.wrap{
  background-color: #fff;
}
.sec{
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 20rpx 30rpx 20rpx 0;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #eee;
}
.sec-left{
  width: 46rpx;
  height: 46rpx;
  padding-right: 20rpx;
}
.sec-content{
  width: 624rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 14px;
  color: #333;
}
.sec-content image{
  width: 30rpx;
  height: 30rpx;
}

.sec-last{
  border: 0;
  margin-bottom: 20rpx;
}